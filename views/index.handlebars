<div class="container">
  <h1>BURGERS, BURGERS, YUM YUM YUM!</h1>

  <div class="row">

    <div class="col col-md-6">
      <h2>available burgers</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        <p>{{burger_name}}</p>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col col-md-6"></div>
    <h2>already eaten burgers</h2>
    <ul>
      {{#each burger}}
      {{#if devoured}}
      <p>{{burger_name}}</p>
      {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

<div class="row">
  <div class="col-12">
    <form class="add-burger">
      <p>Enter name of burger to be added or devoured</p>
      <input type="text" name="input">
      <button type="submit" value="1">Add burger</button>
      <button type="submit" value="0">devoure burger</button>
    </form>
  </div>

</div>
</div>